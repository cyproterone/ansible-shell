#!/usr/bin/env bash

set -eu
set -o pipefail


FILE="$*"

case "$FILE" in
  *.tar.bz|*.tar.bz2|*.tbz|*.tbz2)
    exec tar xjvf "$FILE"
    ;;
  *.tar.gz|*.tgz)
    exec tar xzvf "$FILE"
    ;;
  *.tar.xz|*.txz)
    exec tar xJvf "$FILE"
    ;;
  *.zip)
    exec unzip "$FILE"
    ;;
  *.rar)
    exec unrar x "$FILE"
    ;;
  *.7z)
    exec 7z x "$FILE"
    ;;
  *)
    echo "Unknown format :: $FILE"
    exit 1
    ;;
esac

