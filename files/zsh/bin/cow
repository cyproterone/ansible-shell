#!/usr/bin/env bash

set -eu
set -o pipefail


COLS=$(tput cols)
WRAP=$((COLS / 3))

COWS=($(cowsay -l | tail -n +2))
COW="${COWS[$(($RANDOM % ${#COWS[@]}))]}"

STYLES=(-b -d -g -p -s -t -w -y)
STYLE="${STYLES[$(($RANDOM % ${#STYLES[@]}))]}"


ARGS=(
  -W
  "$WRAP"
  -f
  "$COW"
  "$STYLE"
  )


if [[ -t 0 ]]
then
  TEXT="$*"
else
  TEXT="$(< /dev/stdin)"
fi


TEXT="${TEXT:-"moo"}"
exec cowsay "${ARGS[@]}" <<< "$TEXT"
