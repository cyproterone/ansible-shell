#!/usr/bin/env bash

set -eu
set -o pipefail


TARGET="$1"

export PAGER='tee'

if [[ -d "$TARGET" ]]
then
  ARGS=(
    --color=always
    --group-directories-first
    --all
    --header
    --classify
    --icons
    --oneline
    )
  exec exa "${ARGS[@]}" "$TARGET"
else
  exec bat --color=always "$TARGET"
fi
