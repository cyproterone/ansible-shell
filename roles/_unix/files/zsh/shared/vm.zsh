alias vsh='virsh'
alias vtop='virt-top'


#################### ############## ####################
#################### Vagrant Region ####################
#################### ############## ####################

alias va='vagrant'
alias vadun='vagrant destroy'


#################### ########### ####################
#################### VBox Region ####################
#################### ########### ####################

alias vb='VBoxManage'

vboff() {
  vb controlvm "$1" poweroff
}

vbdun() {
  vboff "$1"
  vb unregistervm "$1" --delete
}
